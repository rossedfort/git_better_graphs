<div class="container top-margin">
  <div class="row">
    <div class="col s2">
      <h5>Followers</h5>
      <div class="followers">
        <% @followers.each do |follower| %>
        <p>
          <%= image_tag("#{follower.avatar_url}") %>
          <%= link_to follower.login, user_path(follower.login) %>
        </p>
        <% end %>
      </div>
    </div>
    <div class="col s6 offset-s1 center">
      <h5>Search for a user Below!</h5>
      <%= form_tag("/search", method: "get") do %>
      <%= label_tag(:id, "Search for:") %>
      <%= text_field_tag(:id) %>
      <%= submit_tag("Search", class: 'btn btn-small') %>
      <% end %>
    </div>
    <div class="col s2 offset-s1 right-align">
      <h5>Following</h5>
      <div class="following">
        <% @following.each do |following| %>
        <p>
          <%= link_to following.login, user_path(following.login) %>
          <%= image_tag("#{following.avatar_url}") %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
