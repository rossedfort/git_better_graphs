<%= javascript_tag "var userName = '#{User.data(params[:id]).login}';" %>
<div class="container">
  <div class="row stats-row">
    <div class="col s5 offset-s1">
      <table class="centered">
        <thead>
          <tr>
            <th>Username</th>
            <th>Followers</th>
            <th>Following</th>
            <th>Repos</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td id="userData"></td>
            <td id="userFollowerCount"></td>
            <td id="userFollowingCount"></td>
            <td id="userRepoCount"></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col s3 offset-s2 repo-dropdown">
      <form>
        <label for="repoSelect" class="repo-select-label">Select A Repository</label>
        <select class="browser-default" name="repoSelect" id="repoSelect">
          <option disabled>choose a repo...</option>
        </select>
      </form>
    </div>
  </div>
  <div class="center">
    <div class="repoLoader">
      <%= image_tag("/assets/loader.svg") %>
    </div>
    <svg id="user_repo_graph"></svg>
  </div>
</div>
